@model BigEshop.Domain.Models.Product.Product

<div class="main-content side-content pt-0" style="margin-right: 20px">
	<div class="container-fluid">
		<div class="inner-body">


			<!-- Page Header -->
			<div class="page-header">
				<div>
					<h2 class="main-content-title tx-24 mg-b-5">پرسش و پاسخ</h2>
					<ol class="breadcrumb">
						<li class="breadcrumb-item"><a href="#">صفحات</a></li>
						<li class="breadcrumb-item active" aria-current="page">پرسش و پاسخ</li>
					</ol>
				</div>
				<div class="d-flex">
					<div class="justify-content-center">
						<button type="button" class="btn btn-white btn-icon-text my-2 me-2">
							وارد كردن<i class="fe fe-download me-2"></i>
						</button>
						<button type="button" class="btn btn-white btn-icon-text my-2 me-2">
							فیلتر<i class="fe fe-filter me-2"></i>
						</button>
						<button type="button" class="btn btn-primary my-2 btn-icon-text">
							گزارش را بارگیری کنید<i class="fe fe-download-cloud me-2"></i>
						</button>
					</div>
				</div>
			</div>


			<div class="row row-sm">
				<div class="col-sm-12 col-md-12">
					<div class="card custom-card accordion-faq">
						<div class="card-body">
							<div>
								<h6 class="main-content-label mb-1">سوالات متداول </h6>
							</div>
							<div aria-multiselectable="true" class="accordion" id="accordion" role="tablist">
								@foreach(var item in Model.ProductQuestions)
								{
									<div class="card">
										<div class="card-header" id="headingOne_@item.Id" role="tab">
											<a aria-controls="collapseOne" aria-expanded="true" data-bs-toggle="collapse" href="#collapseOne">@item.QuestionText</a>
										</div>
										<div aria-labelledby="headingOne_@item.Id" class="collapse show" data-parent="#accordion" id="collapseOne" role="tabpanel">
											@if(item.ProductAnswers != null && item.ProductAnswers.Any())
											{
												<div class="card-body">
													@foreach (var qs in item.ProductAnswers.Where(p => p.QuestionId == item.Id))
													{
														<p>@qs.AnswerText</p>
													}
												</div>
											}
										</div>
									</div>
								}
							</div><!-- accordion -->
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>