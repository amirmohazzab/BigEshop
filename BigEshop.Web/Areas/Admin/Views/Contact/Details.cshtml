@model BigEshop.Domain.Models.Contact.Contact

<div class="container-fluid">
	<div class="inner-body">

		<!-- Page Header -->
		<div class="page-header">
			<div>
				<h2 class="main-content-title tx-24 mg-b-5">مشاهده نامه</h2>
				<ol class="breadcrumb">
					<li class="breadcrumb-item"><a href="#">برنامه ها</a></li>
					<li class="breadcrumb-item active" aria-current="page">مشاهده نامه</li>
				</ol>
			</div>
			<div class="d-flex">
				<div class="justify-content-center">
					<button type="button" class="btn btn-white btn-icon-text my-2 me-2">
						وارد كردن<i class="fe fe-download me-2"></i>
					</button>
					<button type="button" class="btn btn-white btn-icon-text my-2 me-2">
						فیلتر<i class="fe fe-filter me-2"></i>
					</button>
					<button type="button" class="btn btn-primary my-2 btn-icon-text">
						گزارش را بارگیری کنید<i class="fe fe-download-cloud me-2"></i>
					</button>
				</div>
			</div>
		</div>
		<!-- End Page Header -->
		<!-- Row -->
		<div class="row row-sm">
			<div class="col-lg-12 col-xl-12 col-md-12">
				<div class="card custom-card">
					<div class="card-body h-100">
						<div class="email-media">
							<div class="mb-4 d-lg-flex">
								<h3>به هدفی که به دست آوردید تبریک می گویم </h3>
								<div class="ms-auto d-none d-md-flex fs-18">
									<a href="#" class="me-3 tx-inverse"><i class="fe fe-printer" data-bs-toggle="tooltip" title="" data-original-title="چاپ"></i></a>
									<a href="#" class="tx-inverse"><i class="fe fe-tag" data-bs-toggle="tooltip" title="" data-original-title="واگرد"></i></a>
								</div>
							</div>
							<div class="media mt-0">
								
								<div class="media-body tx-inverse">
									<div class="float-end d-none d-md-flex fs-15">
										<small class="ms-2">اسفند ، 1399 12:45 بعد از ظهر</small>
										<small class="ms-2"><i class="fe fe-star" data-bs-toggle="tooltip" title="" data-original-title="دارای رتبه"></i></small>
										<small class="ms-2"><i class="fa fa-reply" data-bs-toggle="tooltip" title="" data-original-title="پاسخ"></i></small>
										<div class="ms-2">
											<a href="#" data-bs-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="نادرست">
												<i class="fe fe-more-horizontal text-dark" data-bs-toggle="tooltip" title="" data-original-title="بیشتر ببینید"></i>
											</a>
											<div class="dropdown-menu dropdown-menu-right shadow">
												<a class="dropdown-item" href="#">پاسخ </a>
												<a class="dropdown-item" href="#">گزارش هرزنامه </a>
												<a class="dropdown-item" href="#">حذف </a>
												<a class="dropdown-item" href="#">نمایش </a>
												<a class="dropdown-item" href="#">فیلتر </a><a class="dropdown-item" href="#">اصلی </a><a class="dropdown-item" href="#">چاپ</a>
												<a class="dropdown-item" href="#"></a>
											</div>
										</div>
									</div>
									<div class="media-title font-weight-semiblod">
										<span class="tx-18 font-weight-bold">@Model.FullName</span>
										<p class="mb-0 text-muted">@Model.Email</p>
										<small class="ms-2 d-md-none">@Model.CreateDate.ToShamsi()</small>
										<small class="ms-2 d-md-none"><i class="fe fe-star" data-bs-toggle="tooltip" title="" data-original-title="دارای رتبه"></i></small>
										<small class="ms-2 d-md-none"><i class="fa fa-reply" data-bs-toggle="tooltip" title="" data-original-title="پاسخ"></i></small>
									</div>
								</div>
							</div>
						</div>
						<div class="eamil-body">
							<h6 class="mb-3">سلام آقا / خانم</h6>
							@Model.Description
							<hr>
							<div class="email-attch">
								<div class="float-end">
									<a href="#"><i class="fa fa-download text-dark" data-bs-toggle="tooltip" title="" data-original-title="دانلود"></i></a>
								</div>
								<p>3 پیوست <a href="#">مشاهده تمام تصاویر</a></p>
								<div class="emai-img">
									<div class="row row-sm">
										<div class="col-sm-3">
											<a href="#"><img class="w-100" src="assets/img/media/18.jpg" alt="تصویر مکان یاب عمومی"></a>
											<h6 class="mb-3 mt-3 mb-lg-0">img_01.jpg </h6>
										</div>
										<div class="col-sm-3">
											<a href="#"><img class="w-100" src="assets/img/media/19.jpg" alt="تصویر مکان یاب عمومی"></a>
											<h6 class="mb-3 mt-3 mb-lg-0">img_02.jpg </h6>
										</div>
										<div class="col-sm-3">
											<a href="#"><img class="w-100" src="assets/img/media/20.jpg" alt="تصویر مکان یاب عمومی"></a>
											<h6 class=" mt-3 mb-lg-0">img_03.jpg </h6>
										</div>
									</div>
								</div>
							</div>
						</div>
					</div>
					<div class="card-footer">
						<a 
							class="btn ripple btn-primary mt-1 mb-1"
							asp-controller="Contact" asp-action="Answer" asp-route-Id="@Model.Id"
						>
						<i class="fa fa-reply"></i> پاسخ</a>
						<a class="btn ripple btn-secondary mt-1 mb-1" href="#"><i class="fa fa-share"></i> رو به جلو</a>
					</div>
				</div>
			</div>
		</div>
		<!-- End Row -->

	</div>
</div>