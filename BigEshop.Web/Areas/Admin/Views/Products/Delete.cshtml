@using BigEshop.Application.Statics
@model BigEshop.Domain.Models.Product.Product

@{
    ViewData["Title"] = "حذف Model.Title";
}

<h3 class="mt-2">حذف @Model.Title</h3>

<h5 class="mt-2 mb-2">آیا از حذف محصول مطمین هستید؟</h5>

<div class="mt-4">
    <dl class="row">
        <dt class="col-sm-2">
            تصویر
        </dt>
        <dd class="col-sm-10">
            <img class="rounded-circle avatar-md ms-2" src="@PathTools.ProductImagePath@Model.Image" alt="@Model.Title">
        </dd>
        <dt class = "col-sm-2">
             گروه 
        </dt>
        <dd class = "col-sm-10">
            @Model.CategoryId
        </dd>
        <dt class = "col-sm-2">
           عنوان 
        </dt>
        <dd class = "col-sm-10">
            @Model.Title
        </dd>
        <dt class = "col-sm-2">
           قیمت 
        </dt>
        <dd class = "col-sm-10">
            @Model.Price
        </dd>
        <dt class = "col-sm-2">
            توضیحات 
        </dt>
        <dd class = "col-sm-10">
            @Model.Description
        </dd>
        <dt class = "col-sm-2">
            وضعیت حذف 
        </dt>
        <dd class = "col-sm-10">
            @Model.IsDelete
        </dd>
        <dt class = "col-sm-2">
            تاریخ ایجاد 
        </dt>
        <dd class = "col-sm-10">
            @Model.CreateDate.ToShamsi()
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="حذف" class="btn btn-danger" /> |
        <a asp-action="Index">بازگشت به لیست</a>
    </form>
</div>
