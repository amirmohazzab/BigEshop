@using BigEshop.Domain.ViewModels.ProductCategory
@model BigEshop.Domain.ViewModels.Product.CreateProductViewModel

@{
    ViewData["Title"] = "افزودن محصول";
    var categories = ViewData["Categories"] as List<ProductCategoryViewModel> ?? new List<ProductCategoryViewModel>();
    var categoriesList = new SelectList(categories, "Id", "Title");
}

<h3 class="mt-2 mb-2">@ViewData["Title"]</h3>

<div class="row row-sm">
    <div class="col-lg-12 col-md-12 col-md-12">
       <form asp-action="Create" enctype="multipart/form-data">
            <div class="card custom-card">
                <div class="card-body">
                    <div class="form-group">
                        <label asp-for="Title" class="tx-medium control-label"></label>
                        <input asp-for="Title" type="text" class="form-control"/>
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CategoryId" class="tx-medium control-label"></label>
                        <select asp-for="CategoryId" class="form-control" asp-items="categoriesList">
                            <option value="">انتخاب کنید ...</option>
                        </select>
                        <span asp-validation-for="CategoryId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Slug" class="tx-medium control-label"></label>
                        <input asp-for="Slug" type="text" class="form-control">
                        <span asp-validation-for="Slug" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Price" class="tx-medium control-label"></label>
                        <input asp-for="Price" type="text" class="form-control">
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Quantity" class="tx-medium control-label"></label>
                        <input asp-for="Quantity" type="text" class="form-control">
                        <span asp-validation-for="Quantity" class="text-danger"></span>
                    </div>
                    <div class="ql-wrapper ql-wrapper-demo mb-3">
                        <label asp-for="Review" class="tx-medium control-label"></label>
                        <textarea asp-for="Review" class="form-control"></textarea>
                        <span asp-validation-for="Review" class="text-danger"></span>
                    </div>
                    <div class="ql-wrapper ql-wrapper-demo mb-3">
                        <label asp-for="Description" class="tx-medium control-label"></label>
                        <textarea asp-for="Description" class="form-control"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="ql-wrapper ql-wrapper-demo mb-3">
                        <label asp-for="InfoDescription" class="tx-medium control-label"></label>
                        <input asp-for="InfoDescription" class="form-control"/>
                        <span asp-validation-for="InfoDescription" class="text-danger"></span>
                    </div>
                    <div class="ql-wrapper ql-wrapper-demo mb-3">
                        <label asp-for="IsFreeShipping" class="tx-medium control-label"></label>
                        <input asp-for="IsFreeShipping" class="form-control"/>
                        <span asp-validation-for="IsFreeShipping" class="text-danger"></span>
                    </div>
                     <label class="form-check-label">
                            <input class="form-check-input" type="checkbox" asp-for="IsFreeShipping"> ارسال رایگان
                            <span class="form-check-sign">
                                <span class="check"></span>
                            </span>
                        </label>
                    <div class="ql-wrapper ql-wrapper-demo mb-3">
                        <label asp-for="GuarrantyText" class="tx-medium control-label"></label>
                        <input asp-for="GuarrantyText" class="form-control"/>
                        <span asp-validation-for="GuarrantyText" class="text-danger"></span>
                    </div>
                    <label class="tx-medium">تصویر محصول</label>
                    <div class="p-4 border rounded-6 mb-0 form-group">
                        <div class="body">

                            <div class="row">
                                <div class="contact-photo">
                                    <img src="/Admin/assets/images/usrbig.jpg" id="avatarUser" class="img-responsive" alt="">
                                </div>
                            </div>

                            <div class="newLabelBtn">
                                <div class="col-sm-10">
                                    <div class="file-field input-field">
                                        <div class="btn">
                                            <span>فایل</span>
                                            <input type="file" asp-for="Image" id="avatar">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer mb-1">
                    <input type="submit" value="ثبت" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-secondary">بازگشت به لیست</a>
                </div>
            </div>
       </form>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
        <script>
            avatar.onchange = evt => {
                const [file] = avatar.files
                if (file)
                    avatarUser.src = URL.createObjectURL(file)
            }
        </script>
    }
}