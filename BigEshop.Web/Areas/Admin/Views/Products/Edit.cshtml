@using BigEshop.Application.Statics
@using BigEshop.Domain.ViewModels.ProductCategory
@model BigEshop.Domain.ViewModels.Product.UpdateProductViewModel

@{
    ViewData["Title"] = "ویرایش محصول";
    var categories = ViewData["Categories"] as List<ProductCategoryViewModel> ?? new List<ProductCategoryViewModel>();
    var categoriesList = new SelectList(categories, "Id", "Title", Model.CategoryId);
}


<h3 class="mt-2">@ViewData["Title"]</h3>
<hr />
<div class="row mt-2">
    <form asp-action="Edit" class="row col-md-12" enctype="multipart/form-data">
        <input type="hidden" asp-for="Id"/>
        <input type="hidden" asp-for="ImageName" />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-md-8">
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoryId" class="control-label"></label>
                <select asp-for="CategoryId" class="form-control" asp-items="categoriesList">
                    <option value="">انتخاب کنید ...</option>
                </select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="ویرایش" class="btn btn-primary" />
            </div>
        </div>
        <div class="col-md-4">
            <div class="mt-6">
                <div class="card body">
                    <div class="row">
                        <div class="contact-photo">
                            <img src="@PathTools.ProductImagePath@Model.ImageName" id="avatarUser" class="img-responsive" style="width:200px" alt="" />
                        </div>
                    </div>

                    <div class="newLabelBtn">
                        <div class="col-sm-10">
                            <div class="row file-field input-field">
                                <div class="btn">
                                    <span>فایل</span>
                                    <input type="file" asp-for="NewImage" id="avatar" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

<div>
    <a asp-action="Index">بازگشت به لیست</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
        <script>
            avatar.onchange = evt => {
                const [file] = avatar.files
                if (file)
                    avatarUser.src = URL.createObjectURL(file)
            }
        </script>
    }
}