@using BigEshop.Application.Statics
@model BigEshop.Domain.Models.Product.Product

@{
    ViewData["Title"] = "جزییات محصول";
}

<h3 class="mt-2">@ViewData["Title"]</h3>

<div class="mt-4">
    <dl class="row">
        <dt class="col-sm-2">
            تصویر
        </dt>
        <dd class="col-sm-10">
            <img class="rounded-circle avatar-md ms-2" src="@PathTools.ProductImagePath@Model.Image" alt="@Model.Title">
        </dd>
        <dt class = "col-sm-2">
           گروه 
        </dt>
        <dd class = "col-sm-10">
            @Model.CategoryId
        </dd>
        <dt class = "col-sm-2">
            عنوان 
        </dt>
        <dd class = "col-sm-10">
            @Model.Title
        </dd>
        <dt class = "col-sm-2">
           قیمت 
        </dt>
        <dd class = "col-sm-10">
            @Model.Price
        </dd>
        <dt class = "col-sm-2">
           توضیحات 
        </dt>
        <dd class = "col-sm-10">
            @Model.Description
        </dd>
        <dt class = "col-sm-2">
           وضعیت حذف
        </dt>
        <dd class = "col-sm-10">
            @Model.IsDelete
        </dd>
        <dt class = "col-sm-2">
            تاریخ ایجاد 
        </dt>
        <dd class = "col-sm-10">
            @Model.CreateDate.ToShamsi()
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">ویرایش</a> |
    <a asp-action="Index">بازگشت به لیست</a>
</div>
