@model BigEshop.Domain.Models.User.Role

@{
    ViewData["Title"] = "حذف نقش";
}

<h3>@ViewData["Title"]</h3>

<h4>آیا از حذف نقش اطمینان دارید؟</h4>

<div>
    <dl class="row">
        <dt class = "col-sm-2">
            عنوان نقش
        </dt>
        <dd class = "col-sm-10">
            @Model.RoleTitle
        </dd>
        <dt class = "col-sm-2">
            تاریخ ایجاد نقش
        </dt>
        <dd class = "col-sm-10">
            @Model.CreateDate.ToShamsi()
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="حذف" class="btn btn-danger" /> |
        <a asp-action="Index">برگشت به لیست</a>
    </form>
</div>
