@model BigEshop.Domain.Models.User.Role

@{
    ViewData["Title"] = "جزییات نقش";
}

<h3>@ViewData["Title"]</h3>

<div>
    <dl class="row">
        <dt class = "col-sm-2">
            عنوان نقش
        </dt>
        <dd class = "col-sm-10">
            @Model.RoleTitle
        </dd>
        <dt class = "col-sm-2">
            تاریخ ایجاد نقش
        </dt>
        <dd class = "col-sm-10">
            @Model.CreateDate.ToShamsi()
