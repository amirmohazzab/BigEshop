@model BigEshop.Domain.ViewModels.Ticket.ClientAnswerTicketViewModel


<h5 class="mb-3">ارسال پیام</h5>
<form asp-action="Answer">
    <input type="hidden" asp-for="TicketId"/>
    <div class="form-group">
        <label class="form-label" asp-for="Message"></label>
        <textarea asp-for="Message" class="form-control form-control-rounded" id="review_text" rows="8" placeholder="پیام خود را وارد کنید..." required=""></textarea>
        <span asp-validation-for="Message"></span>
    </div>
    <div class="text-right">
         <button class="btn main-color-one-bg px-4 py-2" type="submit">ارسال پیام</button>
     </div>
</form>
