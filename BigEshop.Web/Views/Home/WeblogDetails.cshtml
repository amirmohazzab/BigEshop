@using BigEshop.Application.Statics
@using BigEshop.Domain.ViewModels.WeblogComment
@model BigEshop.Domain.Models.Weblog.Weblog

<div class="bread-crumb py-4">
    <div class="container-fluid">
        <nav aria-label="breadcrumb" class="my-lg-0 my-2">
            <ol class="breadcrumb mb-0">
                <li class="breadcrumb-item"><a class="font-14 text-muted-two" href="/">خانه</a></li>
                <li class="breadcrumb-item"><a class="font-14 text-muted-two" href="/Products">فروشگاه</a></li>
            </ol>
        </nav>
    </div>
</div>

<div class="content">
    <div class="container-fluid">


        <div class="blog-heeader">
            <div class="row gy-3">
                <div class="col-md-8">
                    <div class="blog-header-title slider-title-desc">
                        <h2 class="">وبلاگ <span class="main-color-one-color title-font">بهرخ</span></h2>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="search-form">
                        <form action="">
                            <div class="search-filed">
                                <input type="text" placeholder="جستجوی وبلاگ ..." class="form-control bg-white search-input">
                                <button type="submit" class="btn search-btn main-color-one-bg rounded-3"><i class="bi bi-search"></i></button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <div class="blog-menu my-4 d-lg-block d-none">
            <div class="content-box py-2">
                <div class="container-fluid">
                    <div class="row align-items-center">
                        <div class="col-lg-8">
                            <div class="blog-menu-items">
                                <nav class="navbar navbar-expand">
                                    <ul class="navbar-nav">
                                        <li class="nav-item"><a href="" class="nav-link border-animate fromRight">ویدیو های معرفی محصول</a></li>
                                        <li class="nav-item"><a href="" class="nav-link border-animate fromRight">آموزش</a></li>
                                        <li class="nav-item parent-blog-menu-level-2">
                                            <a href="" class="nav-link border-animate fromRight">خلاقیت <i class="bi font-12 ms-1 bi-chevron-down"></i></a>
                                            <ul class="navbar-nav flex-column blog-menu-level-2">
                                                <li class="nav-item"><a href="" class="nav-link">منو شماره 1</a></li>
                                                <li class="nav-item"><a href="" class="nav-link">منو شماره 2</a></li>
                                                <li class="nav-item parent-blog-menu-level-3">
                                                    <a href="" class="nav-link"> <i class="bi bi-chevron-left font-12"></i> منو شماره 3</a>

                                                    <ul class="navbar-nav flex-column blog-menu-level-3">
                                                        <li class="nav-item"><a href="" class="nav-link">منو شماره 1</a></li>
                                                        <li class="nav-item"><a href="" class="nav-link">منو شماره 2</a></li>
                                                        <li class="nav-item"><a href="" class="nav-link">  منو شماره 3</a></li>
                                                    </ul>

                                                </li>
                                            </ul>
                                        </li>
                                        <li class="nav-item"><a href="" class="nav-link border-animate fromRight">تکنولوژی</a></li>
                                        <li class="nav-item"><a href="" class="nav-link border-animate fromRight">کریپتوگرافی</a></li>
                                        <li class="nav-item"><a href="" class="nav-link border-animate fromRight">رمزنگاری</a></li>
                                    </ul>
                                </nav>
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <div class="blog-menu-social">
                                <nav class="navbar navbar-expand justify-content-end">
                                    <ul class="navbar-nav">
                                        <li class="nav-item"><a href="" class="nav-link text-muted-two"><i class="bi bi-instagram"></i></a></li>
                                        <li class="nav-item"><a href="" class="nav-link text-muted-two"><i class="bi bi-twitter"></i></a></li>
                                        <li class="nav-item"><a href="" class="nav-link text-muted-two"><i class="bi bi-linkedin"></i></a></li>
                                        <li class="nav-item"><a href="" class="nav-link text-muted-two"><i class="bi bi-telegram"></i></a></li>
                                        <li class="nav-item"><a href="" class="nav-link text-muted-two"><i class="bi bi-whatsapp"></i></a></li>
                                    </ul>
                                </nav>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="blog-menu-responsive d-lg-none d-block mt-4">
            <div class="content-box">
                <div class="container-fluid">
                    <div class="blog-menu-responsive-menu responsive-menu">
                        <ul class="rm-item-menu navbar-nav">
                            <li class="nav-item bg-ul-f7">
                                <a href="index.html" class="nav-link">ویدیو معرفی محصول</a>
                            </li>
                            <li class="nav-item bg-ul-f7">
                                <a href="" class="nav-link">آموزش</a>
                            </li>
                            <li class="nav-item bg-ul-f7">
                                <a href="" class="nav-link">خلاقیت</a>
                                <span class="showSubMenu"><i class="bi bi-chevron-left"></i></span>
                                <ul class="navbar-nav h-0">
                                    <li class="nav-item">
                                        <a class="nav-link" href="">منو شماره 1</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" href="">منو شماره 2</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" href="">منو شماره 3</a>
                                        <span class="showSubMenu"><i class="bi bi-chevron-left"></i></span>
                                        <ul class="navbar-nav h-0 bg-ul-f7">
                                            <li class="nav-item"><a href="" class="nav-link">منو شماره 1</a></li>
                                            <li class="nav-item">
                                                <a href="" class="nav-link">منو شماره 2</a>
                                            </li>
                                            <li class="nav-item">
                                                <a href="" class="nav-link">منو شماره 3</a>
                                            </li>
                                        </ul>
                                    </li>
                                </ul>
                            </li>
                            <li class="nav-item bg-ul-f7">
                                <a href="" class="nav-link">تکنولوژی</a>
                            </li>
                            <li class="nav-item bg-ul-f7">
                                <a href="" class="nav-link">کریپتو گرافی</a>
                            </li>
                            <li class="nav-item bg-ul-f7">
                                <a href="" class="nav-link">رمز نگاری</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-9">
                <div class="blog-title">
                    <div class="content-box">
                        <div class="container-fluid">
                            <div class="blog-title-title">
                                <h2>@Model.Title</h2>
                            </div>
                            <div class="blog-content-meta-detail">
                                <div class="row gy-4 justify-content-center">
                                    <div class="col-lg-3 col-sm-6">
                                        <div class="blog-content-meta-detail-item">
                                            <i class="bi bi-stack"></i>
                                            <h6>دسته بندی: @Model.WeblogCategory?.CategoryTitle</h6>
                                            <a href="#" class="badge bg-danger font-14">@Model.WeblogCategory?.CategoryTitle</a>
                                        </div>
                                    </div>
                                    <div class="col-lg-3 col-sm-6">
                                        <div class="blog-content-meta-detail-item">
                                            <i class="bi bi-calendar-check"></i>
                                            <h6>آخرین بروزرسانی: </h6>
                                            <span>@Model.CreateDate.ToShamsi()</span>
                                        </div>
                                    </div>
                                    <div class="col-lg-3 col-sm-6">
                                        <div class="blog-content-meta-detail-item">
                                            <i class="bi bi-send"></i>
                                            <h6>نظرات: </h6>
                                            <a href="">@Model.WeblogComments?.Count() نظر</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="blog-content mt-3">
                    <div class="content-box">
                        <div class="container-fluid">
                            <div class="blog-single-content">
                                <div class="text-center mb-4">
                                    <img src="assets/img/blog-4.jpg" class="img-thumbnail" alt="">
                                </div>
                                <div class="pweb_product_content">
                                    <div>
                                        <img src="@PathTools.WeblogImagePath@Model.Image" alt="@Model.Title">
                                    </div>
                                    <div>@Model.Description</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-3">
                <div class="position-sticky top-0">
                    <div class="blog-side-author mb-4 blog-side text-center bg-white shadow-box p-3 rounded-3">
                        <div class="blog-side-author-img">
                            <img src="assets/img/user.jpg" class="rounded-circle border-4 border-primary p-2 border" alt="">
                        </div>
                        <div class="blog-side-author-name my-3"><h5></h5></div>
                        <div class="blog-side-created-at pb-4 border-bottom"><p class="badge bg-secondary-subtle text-dark font-18">@Model.CreateDate.ToShamsi()</p></div>
                        <div class="blog-side-share mt-3">
                            <p class="text-muted">
                                اشتراک گذاری در شبکه های اجتماعی
                            </p>
                            <nav class="navbar navbar-expand justify-content-center">
                                <ul class="navbar-nav">
                                    <li class="nav-item"><a href="" class="nav-link text-muted-two"><i class="bi bi-instagram"></i></a></li>
                                    <li class="nav-item"><a href="" class="nav-link text-muted-two"><i class="bi bi-twitter"></i></a></li>
                                    <li class="nav-item"><a href="" class="nav-link text-muted-two"><i class="bi bi-linkedin"></i></a></li>
                                    <li class="nav-item"><a href="" class="nav-link text-muted-two"><i class="bi bi-telegram"></i></a></li>
                                    <li class="nav-item"><a href="" class="nav-link text-muted-two"><i class="bi bi-whatsapp"></i></a></li>
                                </ul>
                            </nav>
                        </div>
                    </div>

                    @await Component.InvokeAsync("LatestWeblog")

                    <div class="card blog-card shadow-box d-lg-block d-none">
                        <div class="card-header bg-transparent border-0">
                            <h5 class="title-line-bottom">تبلیغات</h5>
                        </div>
                        <div class="card-body p-3">
                            <div class="blog-card-items">
                                <img src="assets/img/bonrailco-1.gif" class="w-100" alt="">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@await Component.InvokeAsync("WeblogComment", new {weblogId = Model.Id})

<partial name="_AddWeblogComment" model="@(new CreateWeblogCommentViewModel() { WeblogId = Model.Id })" />

@await Component.InvokeAsync("CategorizedWeblog", new { categoryId = Model.CategoryId })