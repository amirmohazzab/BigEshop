@model BigEshop.Domain.ViewModels.Account.LoginViewModel

@{
    ViewData["Title"] = "ورود";
}

<div class="auth-form">
    <div class="auth-form-title mb-4 slider-title-desc-center">
        <h2 class="text-center h4 title-line-bottom-center text-muted title-font">@ViewData["Title"]</h2>
    </div>
    <form asp-action="Login" id="form-auth">

        <div class="form-floating mb-3">
            <input type="text" asp-for="Mobile" class="form-control" id="floatingInput" placeholder="name@example.com">
            <label for="floatingInput">موبایل</label>
            <span asp-validation-for="Mobile"></span>
        </div>

        <div class="form-floating mb-3">
            <input type="password" asp-for="Password"class="form-control" id="floatingPassword" placeholder="کلمه عبور">
            <label for="floatingPassword">کلمه عبور</label>
            <span asp-validation-for="Password"></span>
        </div>

        <div class="form-group mt-4">
            <button type="submit" class="btn main-color-one-bg border-0 w-100 d-block py-3">ورود</button>
        </div>
    </form>

   
</div>