@model BigEshop.Domain.ViewModels.Account.ResetPasswordViewModel

@{
    ViewData["Title"] = "تغییر کلمه عبور";
}

<div class="auth-form">
    <div class="auth-form-title mb-4 slider-title-desc-center">
        <h2 class="text-center h4 title-line-bottom-center text-muted title-font">@ViewData["Title"]</h2>
    </div>
    <form asp-action="ResetPassword" id="form-auth">
        <input type="hidden" asp-for="Mobile"/>
        
        <div class="form-floating mb-3">
            <input type="password" asp-for="Password" class="form-control" id="floatingPassword" placeholder="کلمه عبور جدید">
            <label for="floatingPassword">کلمه عبور جدید</label>
            <span asp-validation-for="Password"></span>
        </div>

        <div class="form-floating mb-3">
            <input type="password" asp-for="ConfirmPassword" class="form-control" id="floatingPassword" placeholder="تکرار کلمه عبور جدید">
            <label for="floatingPassword">تکرار کلمه عبور جدید</label>
            <span asp-validation-for="ConfirmPassword"></span>
        </div>

        <div class="form-floating mb-3">
            <input type="text" asp-for="ConfirmCode" class="form-control" id="floatingInput" placeholder="name@example.com">
            <label for="floatingInput">کد تایید</label>
            <span asp-validation-for="ConfirmCode"></span>
        </div>

        <div class="form-group mt-4">
            <button type="submit" class="btn main-color-one-bg border-0 w-100 d-block py-3">تغییر کلمه عبور</button>
        </div>
    </form>


</div>
