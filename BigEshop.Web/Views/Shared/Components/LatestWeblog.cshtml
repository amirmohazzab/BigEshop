@using BigEshop.Application.Convertor
@using BigEshop.Application.Statics
@model List<BigEshop.Domain.Models.Weblog.Weblog>

<div class="card blog-card mb-4 shadow-box mb-4">
    <div class="card-header bg-transparent border-0">
        <h5 class="title-line-bottom">آخرین مطالب</h5>
    </div>
    <div class="card-body pb-0">

        <nav class="navbar">
            <ul class="navbar-nav">
                @foreach (var item in Model)
                {
                    <li class="nav-item">
                        <a asp-area="" asp-controller="Home" asp-action="WeblogDetails" asp-route-id="@item.Id" class="nav-link">
                            <div class="mini-blog-item">
                                <div class="image">
                                    <img src="@PathTools.WeblogImagePath@item.Image" class="img-thumbnail" alt="@item.Title">
                                </div>
                                <div class="d-flex align-items-start desc flex-wrap flex-column justify-content-between">
                                    <h6 class="title mct-hover">@item.Title</h6>
                                    <div class="d-flex align-items-center">
                                        <p class="text-muted mb-0">@item.CreateDate.ToShamsi()</p>
                                        <div class="text-end ms-2"><i class="bi bi-arrow-left main-color-one-color"></i></div>
                                    </div>
                                </div>
                            </div>
                        </a>
                    </li>
                }
            </ul>
        </nav>
    </div>
</div>
